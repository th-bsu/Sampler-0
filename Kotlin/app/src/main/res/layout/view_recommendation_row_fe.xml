<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:id="@+id/view_recommendation_row"
    >

    <TextView
        android:id="@+id/view_recommendation_row_product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_recommendation_row_position_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/view_recommendation_row_position_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/view_recommendation_row_product_id"
        app:layout_constraintBottom_toTopOf="@+id/view_recommendation_row_position_offset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_recommendation_row_product_id"
        app:layout_constraintEnd_toEndOf="@+id/view_recommendation_row_product_id"
        />

    <TextView
        android:id="@+id/view_recommendation_row_position_offset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/view_recommendation_row_position_row"
        app:layout_constraintBottom_toTopOf="@+id/view_recommendation_row_poster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_recommendation_row_product_id"
        app:layout_constraintEnd_toEndOf="@+id/view_recommendation_row_product_id"
        />

    <ImageView
        android:id="@+id/view_recommendation_row_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view_recommendation_row_position_offset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_recommendation_row_product_id"
        app:layout_constraintEnd_toEndOf="@+id/view_recommendation_row_product_id"
        android:adjustViewBounds="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>